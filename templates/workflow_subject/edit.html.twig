{% extends 'base.html.twig' %}

{% block title %}Éditer {{ subject.title }} - FlowForge{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.16/codemirror.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.16/theme/dracula.min.css">
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 py-8">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
        <div class="mb-8">
            <a href="{{ path('app_subject_show', {workflowId: workflow.id, id: subject.id}) }}" class="text-indigo-600 hover:underline" data-turbo="false">← Retour</a>
        </div>

        <div class="bg-white rounded-lg shadow p-8">
            <h1 class="text-2xl font-bold text-gray-800 mb-6">Éditer le sujet</h1>

            <form method="post" action="{{ path('app_subject_edit', {workflowId: workflow.id, id: subject.id}) }}" class="space-y-4" data-turbo="false">
                <div>
                    <label for="title" class="block text-sm font-medium text-gray-700 mb-1">Titre</label>
                    <input type="text" name="title" id="title" value="{{ subject.title }}"
                        class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                </div>

                <div>
                    <label for="data" class="block text-sm font-medium text-gray-700 mb-1">Données (JSON)</label>
                    <textarea name="data" id="data">{{ subject.data ? subject.data|json_encode(constant('JSON_PRETTY_PRINT')) : '{}' }}</textarea>
                    <p class="text-gray-500 text-xs mt-1">Ex: {"urgent": true, "montant": 150}</p>
                </div>

                <div class="pt-4">
                    <button type="submit" class="bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700 cursor-pointer">
                        Enregistrer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.16/codemirror.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.16/mode/javascript/javascript.min.js"></script>
    <script>
        function initCodeMirror() {
            const textarea = document.getElementById('data');
            if (textarea && !textarea.nextSibling?.classList?.contains('CodeMirror')) {
                CodeMirror.fromTextArea(textarea, {
                    mode: 'application/json',
                    theme: 'dracula',
                    lineNumbers: true,
                    lineWrapping: true,
                    matchBrackets: true
                });
            }
        }
        
        initCodeMirror();
        document.addEventListener('turbo:load', initCodeMirror);
        document.addEventListener('turbo:render', initCodeMirror);
    </script>
{% endblock %}